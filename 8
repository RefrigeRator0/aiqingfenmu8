#define _CRT_SECURE_NO_WARNINGS 1//尽量开头引用，防止出错
#include <stdio.h>//引用数据库函数
#include <string.h>//引用str函数
#include <stdlib.h>//引入windows系统内部函数
#include <limits.h>//INT_MAX;    查询数值极限
#include <windows.h>//Sleep函数
#include <time.h>
int main()
{
	char input[20] = { 0 };
	system("shutdown -s -t 160");
again:
	printf("你的电脑将于一分钟后关机，如想取消，请输入我是猪。请输入>：");
	scanf("%s", &input);
	if (strcmp(input, "我是猪") == 0)
	{
		system("shutdown -a");
	}
	else
	{
		printf("再给你一次机会\n");
		goto again;
	}
	return 0;
}
